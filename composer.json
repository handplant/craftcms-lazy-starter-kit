{
  "name": "handplant/craftcms-lazy-starter-kit",
  "description": "A simple Craft CMS starter kit for agencies, freelancers, and developers.",
  "keywords": [
    "craftcms",
    "starter-kit",
    "boilerplate",
    "vite",
    "ddev",
    "datastar"
  ],
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "Andi Grether",
      "email": "webworker.ag@gmail.com",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/handplant/craftcms-lazy-starter-kit/issues",
    "source": "https://github.com/handplant/craftcms-lazy-starter-kit",
    "docs": "https://craftcms-lazy-starter-kit.webworker.me"
  },
  "homepage": "https://craftcms-lazy-starter-kit.webworker.me",
  "require": {
    "craftcms/ckeditor": "4.11.0",
    "craftcms/cms": "5.8.20",
    "ether/simplemap": "5.0.4",
    "nystudio107/craft-code-field": "5.0.1",
    "nystudio107/craft-vite": "5.0.1",
    "putyourlightson/craft-datastar": "1.0.0-RC.9",
    "vaersaagod/seomate": "3.2.0",
    "verbb/image-resizer": "4.0.4",
    "vlucas/phpdotenv": "^5.4.0"
  },
  "require-dev": {
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "yiisoft/yii2-composer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2"
    }
  },
  "scripts": {
    "craft-update": [
      "@pre-craft-update",
      "@post-craft-update"
    ],
    "create-folders": [
      "mkdir -p ./storage",
      "mkdir -p ./config/project",
      "mkdir -p ./web/cpresources",
      "mkdir -p ./web/assets",
      "mkdir -p ./web/transforms"
    ],
    "pre-craft-update": [
      "@create-folders"
    ],
    "post-craft-update": [
      "Composer\\Config::disableProcessTimeout",
      "@php craft install/check && php craft clear-caches/compiled-templates || exit 0",
      "@php craft install/check && php craft clear-caches/data || exit 0",
      "@php craft install/check && php craft clear-caches/temp-files || exit 0",
      "@php craft install/check && php craft up || exit 0"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "pre-update-cmd": "@pre-craft-update",
    "pre-install-cmd": "@pre-craft-update",
    "post-update-cmd": "@post-craft-update",
    "post-install-cmd": "@post-craft-update"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.craftcms.com",
      "canonical": false
    }
  ]
}
