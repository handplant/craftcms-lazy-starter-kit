{% set image = entry.card.image.eagerly().one() ?? null %}
{% set category = entry.relationCategories.one() ?? null %}
{% set date = entry.date|date('d.m.Y') %}
{% set type = type ?? null %}

<div class="ui-card relative">
  {% if category %}
    <span class="absolute py-1 px-2 shadow ui-bold -top-3 right-5 text-base text-white rounded-sm"
          style="background: {{ category.color.getHex() ?? '#000' }}"
    >{{ category }}</span>
  {% endif %}
  {% if image %}
    <div class="aspect-video">
      {{ include("_components/image.twig", {
        image: image,
        sizes: [480],
        objectFit: true
      }, withContext = false) }}
    </div>
  {% endif %}
  <div class="space-y-6 p-4">
    <div>
      {% if date %}
        <p class="text-base text-primary ui-bold mb-2">{{ date }}</p>
      {% endif %}
      <h2 class="ui-h5">
        {{ entry.headline ? entry.headline|nl2br : entry.title }}
      </h2>
    </div>
    {% if entry.card.teaser %}
      <div class="prose md:prose-lg">
        {{ entry.card.teaser }}
      </div>
    {% endif %}
    <div class="flex justify-between">
      {% if entry.externalUrl %}
        {% include '_components/button.twig' with {
          label: "Read more"|t,
          url: entry.externalUrl,
          target: '_blank',
          external: true
        } %}
      {% else %}
        {% include '_components/button.twig' with {
          label: "Read more"|t,
          url: entry.url
        } %}
      {% endif %}
      {% if type == 'map' %}
        <button class="ui-btn"
                data-on:click="focusMarker({{ entry.id }})"
                title="Show on map">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
          </svg>
        </button>
      {% endif %}
    </div>
  </div>
</div>
