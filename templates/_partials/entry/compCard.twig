{% set image = entry.image.eagerly().one() ?? null %}
{% set button = entry.button %}
{% set slider = slider ?? false %}


{% if slider %}
<div class="embla__slide">
  {% endif %}
  <div class="ui-card"{{ not slider ? ' data-animate="fade-up"' }}>
    {% if image %}
      <div class="aspect-video">
        {% include "_components/image.twig" with {
          image: image,
          sizes: [480],
          objectFit: true,
          class: 'rounded-sm'
        } only %}
      </div>
    {% endif %}
    <div class="space-y-8 p-4">
      <h2 class="ui-h4 ">
        {{ entry.headline|nl2br }}
      </h2>
      {% if entry.teaser %}
        <div class="prose prose-lg">
          {{ entry.teaser }}
        </div>
      {% endif %}
      {% if button %}
        {% include "_components/button.twig" with {
          label: button.label ?? button.title,
          url: button.url,
          target: button.target ? '_blank' : null,
          rel: button.target ? 'noopener noreferrer' : null,
          ariaLabel: button.ariaLabel,
          download: button.download,
        } only %}
      {% endif %}
    </div>
  </div>
  {% if slider %}
</div>
{% endif %}
